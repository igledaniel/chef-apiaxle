server {
  listen <%= @listen_port %> default_server;
  listen [::]:<%= @listen_port %> default_server ipv6only=on;
  root <%= @install_dir %>/;
  index index.html index.htm;
  server_name localhost;
  <%- @allowed_ips.each do |ip| -%>
  allow <%= ip %>;
  <%- end %>
  deny all;
  location /v1 {
    proxy_pass http://<%= @api_host %>:<%= @api_port %>;
  }
}
